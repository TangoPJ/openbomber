{
  "extends": "@tsconfig/svelte",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",

    /* Bundler mode */
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "jsx": "react-jsx",
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "outDir": "./tmp",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Project */
    "baseUrl": "./src",
    "types": [
      "vite/client",
      "svelte",
      "vite-plugin-glsl/ext"
    ],
    "paths": {
      "shared/*": ["../shared/*"],
      "core/*": [ "../core/*"],
      "server/*": ["../server/*"]
    }
  },
  "include": [
    "./src/**/*.svelte",
    "./src",
    "./core",
    "./server",
    "./shared",
  ],
  "exclude": [
    "./vite.config.ts"
  ]
}