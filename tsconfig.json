{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": false,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "types": [
      "vite/client",
      "svelte"
    ],
    "paths": {
      "@/*": [
        "../shared/*",
        "../core/*",
        "../server/*"
      ]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.mts",
    "src/**/*.svelte",
    "core",
    "shared"
  ],
  "exclude": [
    "./vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}