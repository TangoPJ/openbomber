{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "shared/*": ["./shared/*"],
      "core/*": [ "./core/*"],
      "server/*": ["./server/*"]
    }
  },
  "include": [
    "./core",
    "./server",
    "./shared",
    "./vite.config.ts"
  ]
}